@model Collab.Models.Member
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@*    <link rel="stylesheet" href="~/collab_00.styles.css" asp-append-version="true" />*@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<!-- MVC -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


<!-- logo -->
<div class="logo">
    <img src="/img/logo_black.png" alt="" style="width: 300px;">
</div>
<div class="container">
    <!-- 註冊標題 -->
    <h1>註冊會員</h1>
    <form>
        <!-- 會員名稱 -->
        <div class="userName">
            <label for="userName">會員名稱</label>
            <input type="text" placeholder="" required>
        </div>
        <!-- 建立帳號 -->
        <div class="account">
            <label for="account">E-mail</label>
            <input type="email" placeholder="" required>
        </div>
        <!-- 建立密碼 -->
        <div class="password">
            <label for="password">密碼</label>
            <input type="password" placeholder="" minlength="6" maxlength="12" pattern="^[a-zA-Z0-9][a-zA-Z0-9]{6,12}$" required>
        </div>
        <!-- 確認密碼 -->
        <div class="confirmPassword">
            <label for="confirmPassword">確認密碼</label>
            <input type="password" placeholder="" minlength="6" maxlength="12" pattern="^[a-zA-Z0-9]{6,12}$" required>
        </div>

        <!-- 註冊按鈕 -->
        <div>
            <input class="btn_submit" type="submit" value="註冊">
        </div>
    </form>
</div>
<link rel="stylesheet" href="~/css/Sign.css" />
<script>
    $(document).ready(function () {
        // 函數用於驗證密碼和確認密碼欄位
        function validatePassword() {
            var password = $("input[name='password']").val();
            var confirmPassword = $("input[name='confirmPassword']").val();

            if (password !== confirmPassword) {
                alert("密碼不相符。");
                return false;
            }

            return true;
        }
        e
        // 為表單的提交事件附加事件處理程序
        $("form").submit(function (event) {
            // 如果密碼不匹配，阻止表單提交
            if (!validatePassword()) {
                event.preventDefault();
            } else {
                // 驗證成功，將使用者重新導向到會員登入的頁面
                return RedirectToAction("Index", "Login"); // 替換為會員登入頁面的URL
            }
        });
    });
</script>
