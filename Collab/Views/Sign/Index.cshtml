<!-- logo -->
<div class="logo">
    <img src="/img/logo_black.png" alt="" style="width: 300px;">
</div>
<div class="container">
    <!-- 註冊標題 -->
    <h1>註冊會員</h1>
    <form>
        <!-- 會員名稱 -->
        <div class="userName">
            <label for="userName">會員名稱</label>
            <input type="text" placeholder="" required>
        </div>
        <!-- 建立帳號 -->
        <div class="account">
            <label for="account">E-mail</label>
            <input type="email" placeholder="" required>
        </div>
        <!-- 建立密碼 -->
        <div class="password">
            <label for="password">密碼</label>
            <input type="password" placeholder="" minlength="6" maxlength="12" pattern="^[a-zA-Z0-9]$" required>
        </div>
        <!-- 確認密碼 -->
        <div class="confirmPassword">
            <label for="confirmPassword">確認密碼</label>
            <input type="password" placeholder="" required>
        </div>

        <!-- 註冊按鈕 -->
        <div>
            <input class="btn_submit" type="submit" value="註冊">
        </div>
    </form>
</div>
