@model Collab.Models.Mission
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@*    <link rel="stylesheet" href="~/collab_00.styles.css" asp-append-version="true" />*@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<!-- MVC -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


<button id="show" style="font-size: 30px;">點我</button>
<!----------------------新增任務視窗--------------------------------------------->
<dialog id="infoModal">
    <div class="position-relative">
        <button id="closeDialog" type="button" class="btn-close position-absolute top-10 end-0" aria-label="Close"></button>
    </div>
    <!-- 計劃標題 -->
    <h1 class="missionEdit-projectName"> 藝起派對</h1>
    <!-- 編輯內容 -->
    <form asp-action="SaveMission" asp-controller="MissionEdit" method="post">
        <!-- 任務名稱 -->
        <div class="MissionName">
            <label for="MissionName">任務：</label>
            <input asp-for="MissionName" type="text" placeholder="">
        </div>
        <!-- 指派人員 -->
        <div class="MemberID">
            <label for="MemberId" class="col-md-2 col-form-label">人員：</label>
            <img src="~/img/MemberImg/0733ba760b29378474dea0fdbcb97107.jpg" class="rounded-circle" alt="頭像" width="60px"
                 height="60px">
        </div>
  
        <!-- 開始日 -->
        <div class="startDate">
            <label for="MisStartTime">開始日：</label>
            <input type="date" asp-for="MisStartTime" class="calendar">
        </div>
        <!-- 截止日 -->
        <div class="endDate">
            <label for="MisFinishTime">截止日：</label>
            <input type="date" asp-for="MisFinishTime" class="calendar">
        </div>
        <!-- 狀態 -->
        <div class="status">
            <label for="MisState">狀態：</label>
            <div class="btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-secondary btn-lg">
                    <input type="radio" name="MisState" value="pending"> 新任務
                </label>&nbsp;&nbsp;
                <label class="btn btn-secondary btn-lg">
                    <input type="radio" name="MisState" value="inProgress"> 進行中
                </label>&nbsp;&nbsp;
                <label class="btn btn-secondary btn-lg">
                    <input type="radio" name="MisState" value="completed"> 已完成
                </label>
            </div>
        </div>
        <!-- 目標選單 -->
        <div class="targetSelect">
            <label for="IntentId">目標：</label>
            <select>
                <option value="" selected disabled>請選擇</option>
                <option value="文宣規劃">文宣規劃</option>
                <option value="寫生活動">寫生活動</option>
                <option value="派對市集">派對市集</option>
            </select>
        </div>
        <!-- 描述 -->
        <div class="description">
            <label for="MisDescribe">描述：</label>
            <textarea asp-for="MisDescribe" class="form-control" rows="5" maxlength="200" placeholder="請輸入描述內容"></textarea>
        </div>
        <!-- 儲存按鈕 -->
        <div class="missionEdit-submitBtn">
            <button type="submit" class="btn btn-secondary btn-lg">儲存</button>
        </div>
    </form>
</dialog>
<!----------------------新增任務視窗end--------------------------------------------->
<!-- ------------- JS ---------------- -->

<script>
    let btn = document.querySelector("#show");
    let infoModal = document.querySelector("#infoModal");
    let closeBtn = document.querySelector("#closeDialog");

    btn.addEventListener("click", function () {
        infoModal.showModal();
    });

    closeBtn.addEventListener("click", function () {
        infoModal.close();
    });

</script>

<!-- ------------- JS end---------------- -->

<link rel="stylesheet" href="~/css/MissionEdit.css" />

